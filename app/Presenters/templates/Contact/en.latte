{block content}
    <div class="content" style="margin-top: 3rem;">
        <h2 n:block=title class="content-head is-center">Contact</h2>

        <div class="pure-g">
            <div class="l-box-lrg pure-u-1 pure-u-md-2-5">
                {if !$submitted}
                    {form contactForm class=>"pure-form pure-form-stacked"}
                        <fieldset>
                            <label>Your e-mail:</label>
                            {input email placeholder=>"email@example.com"}
                            <small id="contact-email-help" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            <label >Your name:</label>
                            {input name placeholder=>"Jane Doe"}
                            <label>Message:</label>
                            {input text style=>"width: 100%;", placeholder=>"Hello, thank you for the great beer guys!"}
                            <button type="submit" n:name="submit" class="pure-button">Send</button>
                        </fieldset>
                    {/form}
                {else}
                    <p class="text-muted" style="text-align: center;">Thank you for contacting us, your message will be sent shortly!</p>
                {/if}
            </div>

            <div class="l-box-lrg pure-u-1 pure-u-md-3-5">
                <h4>Contact Us</h4>
